<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@color/black" >

        <RelativeLayout
            android:id="@+id/notice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp"
            android:background="@color/headerred" >

            <TextView
                android:id="@+id/up_notice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="Are you sure you want you add new user to game? If yes, please enter player's name else cancel"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/down_notice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/up_notice"
                android:layout_alignRight="@+id/up_notice"
                android:layout_below="@+id/up_notice"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="All your current data will be lost"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:visibility="gone" />

        </RelativeLayout>
        

        <EditText
            android:id="@+id/ETnewuser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/notice"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:text=""
            android:hint="Name"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="left" />
        
        <Button
            android:id="@+id/Add_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ETnewuser"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:background="@drawable/blue_gradient"
            android:text="Add User"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="left" />
        
         <Button
            android:id="@+id/CANCEL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Add_user"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:background="@drawable/black_gradient"
            android:text="Cancel"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="left" />

    </RelativeLayout>


    

</RelativeLayout>    