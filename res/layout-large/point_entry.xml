<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgpattern" >

    <!-- Header content starts here -->

    <LinearLayout
        android:id="@+id/upperpart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/headerred">
        
        	<ImageView 
        	    android:id="@+id/logo"
        	    android:layout_width="75dp"
        	    android:layout_height="75dp"
        	    android:layout_centerVertical="true"
        	    android:layout_marginLeft="10dp"
        	    android:padding="15dp"
        	    android:src="@drawable/app_icon_actionbar"
        	    android:contentDescription="@string/logo"/>
        	
        	<TextView 
        	    android:id="@+id/title"
        	    android:layout_toRightOf="@+id/logo"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="@string/app_name"
        	    android:textSize="30dp"
        	    android:layout_centerVertical="true"
        	    android:textColor="@color/white"/>
        	<ImageView 
        	    android:id="@+id/newgame"
        	    android:layout_width="50dp"
        	    android:layout_height="50dp"
        	    android:layout_toLeftOf="@+id/menubar"
        	    android:layout_centerVertical="true"
        	    android:layout_marginRight="10dp"
        	    android:src="@drawable/new_game"
        	    android:contentDescription="@string/logo"
        	    android:visibility="gone"/>
        	
        	<ImageView 
        	    android:id="@+id/menubar"
        	    android:layout_width="50dp"
        	    android:layout_height="50dp"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"
        	    android:layout_marginRight="15dp"
        	    android:src="@drawable/menu_options"
        	    android:contentDescription="@string/logo"
        	    android:visibility="gone"/>
        
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/repeatingpart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_pattern"
        android:orientation="horizontal">
        
    </LinearLayout>
 </LinearLayout>
   
   <!-- Header Content ends her -->
   
   
   <!-- Setting Part starts here -->
   
   <ScrollView 
      android:id="@+id/scroll_point_entry"
      android:layout_width="fill_parent"
      android:layout_height="450dp"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_below="@+id/upperpart"
      android:background="@drawable/optionbg" >
    
   <RelativeLayout 
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:padding="10dp">
    
       <TextView 
           android:id="@+id/TVinfo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:text="@string/enterpoint"
           android:textSize="20dp"
           android:textColor="@color/black"/>
       
	       <LinearLayout
	           android:layout_width="fill_parent"
	    	   android:layout_height="wrap_content" 
	    	   android:id="@+id/player_point_entry"
	    	   android:layout_marginTop="10dp"
	    	   android:layout_below="@+id/TVinfo"
	    	   android:orientation="vertical">
	    	   
	           <RelativeLayout
		           android:layout_width="fill_parent"
		    	   android:layout_height="wrap_content" 
		    	   android:orientation="horizontal">
		    	   
	               <TextView 
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:text="Won?"
			           android:textSize="20dp"
			           android:layout_alignParentRight="true"
			           android:textColor="@color/brown"
			           android:layout_weight="1"/>
	               	           
	      	 	</RelativeLayout>
	      	 	
	          
	       </LinearLayout>
     
   		</RelativeLayout>
     </ScrollView>
  

     <Button
         android:id="@+id/saveButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/scroll_point_entry"
         android:layout_alignRight="@+id/scroll_point_entry"
         android:layout_marginTop="10dp"
         android:layout_below="@+id/scroll_point_entry"
         android:text="@string/save" 
         android:textSize="40dp"
         android:textColor="@color/white"
         android:paddingTop="15dp"
         android:paddingLeft="15dp"
         android:paddingBottom="15dp"
         android:paddingRight="15dp"  
         android:background="@drawable/blue_gradient"/>

</RelativeLayout>
